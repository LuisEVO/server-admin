{
  "name": "server",
  "version": "1.0.0",
  "description": "Servidor local para desarrollo del curso de Angular",
  "main": "index.js",
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "scripts": {
    "start": "nodemon src/index.ts",
    "lint": "eslint . --fix",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:drop": "rm prisma/dev.db",
    "db:refresh": "npm run db:drop && npm run db:push && npm run db:seed",
    "win:db:drop": "del /f prisma\\dev.db",
    "win:db:refresh": "npm run win:db:drop && npm run db:push && npm run db:seed"
  },
  "author": "Luis Vilcarromero",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^4.5.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.1.10",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-class-validator": "^1.0.3",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
